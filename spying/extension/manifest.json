{
    "manifest_version": 3,
    "name": "YouTube Currently Watching",
    "version": "1.0",
    "description": "Tracks the currently watching YouTube video",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ]
  }
  